<!DOCTYPE html>
<html lang="en">
<%- include('header') -%>
<body>
    <h2 class="center-align blue-grey-text text-darken-2">Issue Browser</h2>
    <div class="container" style="width: 100%;">

        <!-- Display up to 10 cards -->
        <% for(var i = (num - 1) * 10; i < num * 10 && i < data.length; i++) { %>
                <div class="row align">
                    <div class="col offset-m3 offset-s2 m6 s8 ">
                        <div class="card hoverable">
                            <div class="card-content">
                                <span class="card-title"><%= data[i].title %></span>
                                <p>issue: <%= data[i].number %></p>
                                <p><span class="grey-text"> State: <%= data[i].state %></span></p>
                            </div>
                            <div class="card-action">
                                <a class="pink-text pink-darken-3" href="/<%= 'issue/' + i %>">go to Issue</a>
                            </div>
                        </div>
                    </div>
                </div>
        <% } %>


        <!-- Pagination CSS -->
        <div class="pagination-wrapper">
            <ul class="pagination">
                <li class="<%= num <= 1  ? 'disabled' : 'waves-effect' %>">
                    <a class="<%= num <= 1 ? 'disable' : '' %>"
                        href="/page/<%= parseInt(num) - 1 %>">
                        <i class="material-icons">chevron_left</i>
                    </a>
                </li>
                <% for (var j = 1; j <= Math.ceil(data.length / 10); j++) { %>
                    <li class="<%= j == num ? 'active' : 'waves-effect' %>"><a href="/page/<%= j %>"><%= j %></a></li>
                <% } %>
                <li class="<%= num >= Math.ceil(data.length / 10) ? 'disabled' : 'waves-effect' %>">
                    <a class="<%= num >= Math.ceil(data.length / 10) ? 'disable' : '' %>" href="/page/<%= parseInt(num) + 1 %>">
                        <i class="material-icons">chevron_right</i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</body>
<%- include('script') -%>
</html>